<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EditCourseActivity">

    <TextView
        android:id="@+id/course_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:maxLines="3"
        android:minLines="1"
        android:text="@string/edit_course_name"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/course_name_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:gravity="center"
        android:hint="@string/teacher_add_course_hint"
        android:inputType="text"
        android:maxLines="3"
        android:minLines="1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/course_name_text_view"
        app:layout_constraintStart_toStartOf="@+id/course_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/course_name_text_view" />

    <TextView
        android:id="@+id/course_description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="@string/edit_course_description"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/course_name_edit_text"
        app:layout_constraintStart_toStartOf="@+id/course_name_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/course_name_edit_text" />

    <EditText
        android:id="@+id/course_description_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/course_description_text_view"
        app:layout_constraintStart_toStartOf="@+id/course_description_text_view"
        app:layout_constraintTop_toBottomOf="@+id/course_description_text_view" />

    <Button
        android:id="@+id/course_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/button_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>