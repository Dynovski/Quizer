<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/test_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/solve_test_number_of_questions"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/test_name_text_view"
        app:layout_constraintStart_toStartOf="@+id/test_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/test_name_text_view" />

    <TextView
        android:id="@+id/num_of_questions_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/textView16"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/solve_test_deadline"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/num_of_questions_text_view"
        app:layout_constraintStart_toStartOf="@+id/num_of_questions_text_view"
        app:layout_constraintTop_toBottomOf="@+id/num_of_questions_text_view" />

    <TextView
        android:id="@+id/deadline_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/textView18"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <Button
        android:id="@+id/begin_test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/begin_test"
        app:layout_constraintEnd_toEndOf="@+id/deadline_text_view"
        app:layout_constraintStart_toStartOf="@+id/deadline_text_view"
        app:layout_constraintTop_toBottomOf="@+id/deadline_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>